{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "mech",
	"patterns": [
		{
			"include": "#block"
		},
		{
			"name": "markup.heading",
			"match": ".+(\n=+)"
		},
		{
			"name": "markup.heading",
			"match": ".+(\n-+)"
		},
		{	
			"include": "#outOfBlock"
		}
	],
	"repository": {
		"block": {
			"name": "meta.block",
			"begin": "  |~~~|```|`",
			"end": "\n|~~~|```|`",
			"patterns": [
				{
					"name": "markup.inserted",
					"match": "//.+"
				},
				{
					"name": "string.regexp",
					"match": "~"
				},
				{
					"name": "variable.function",
					"match": "\\|([A-Z]|[a-z]|/|-| |[0-9])+\\||([A-Z]|[a-z]|/|-|[0-9])+: "
				},
				{
					"name": "variable.function",
					"match": "\\S+(?=\\[)"
				},
				{"name": "constant.regexp",
				 "match": "\\[|\\]|{|}"
				},
				{
					"name": "string.quoted.double.mech",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.mech",
							"match": "\\\\."
						},
						{
							"name": "keyword.control.mech",
							"begin": "{{",
							"end": "}}",
							"patterns": [
								{
									"name": "constant.numeric.integer",
									"match": "[^}]*"
								}
							]
						}
					]
				},
				{
					"name": "constant.numeric.integer",
					"match": "(0x[A-Z0-9]+)"
				},
				{
					"name" : "constant.numeric.integer", 
					"match": "([0-9]+)|([0-9]+(\\.)[0-9]+)"
				},
				{
					"name": "meta.block",
					"begin": "([A-Za-z0-9-_]+(\\.))",
					"end": "\n| |{",
					"patterns": [
						{
							"name": "entity.name.tag.css", 
							"match": "[A-Za-z][0-9]*" 
						}
					]
				},
				{
					"name": "constant.language",
					"match": "true|false|none"
				},
				{
					"name": "meta.block",
					"begin": "<",
					"end": ">",
					"beginCaptures": {
						"0": { "name": "keyword.control.mech" }
					  },
					  "endCaptures": {
						"0": { "name": "keyword.control.mech" }
					  },
					"patterns": [
						{
							"name": "constant.numeric",
							"match": "((u|i)(8|16|32|64|128))|(f(32|64))|bool|string"
						}
					]
				},
				{
					"name": "meta.block",
					"begin": "#",
					"end": " |\\.",
					"beginCaptures": {
						"0": { "name": "constant.regexp" }
					  },
					"patterns": [
						{
							"name": "",
							"match": "[a-z0-9-]+"
						}
					]
				},
				{
					"name": "meta.block",
					"begin": "( |\n)[a-z]+\/",
					"end": "\\(",
					"beginCaptures": {
						"0": { "name": "constant.language" }
					  },
					"patterns": [
						{
							"name": "constant.language", 
							"match": "[a-z]+" 
						}
					]
				},
				{
					"name": "meta.block",
					"begin": "([A-Za-z_]+)",
					"end": "[^A-Za-z0-9-_]",
					"patterns": [
						{
							"name": "",
							"match": "[A-Za-z0-9-_]*" 
						}
					]
				
				}


			
				
			]
		},
		"outOfBlock":{
			
		}
	},
	"scopeName": "mech"
}